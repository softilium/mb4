extends layout.pug

    block title
        title Вход

    block content
        script[src="/assets/lib/vue/vue.global.prod.js"]

        div#vueapp
            div.row 
                div.col-6 
                    h1 Вход
                    form
                        div.mb-3
                            label.form-label Email address
                            input#email.form-control[type="email"][v-model="userName"]
                        div.mb-3
                            label.form-label Password
                            input#password.form-control[type="password"][v-model="password"]
                        button.btn.btn-primary[v-on:click.prevent="login()"] Вход
                div.col-6
                    h1 Регистрация
                    form
                        div.mb-3
                            label.form-label Email address
                            input#emailreg.form-control[type="email"][v-model="userNameReg"]
                        div.mb-3
                            label.form-label Password
                            input#passwordreg.form-control[type="password"][v-model="passwordReg"]
                        button.btn.btn-primary[v-on:click.prevent="register()"] Регистрация

        script[src="/assets/js/login.js"]
